<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selectBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#ffbce55c"
                android:text="화면을 아래로 내려 목록에서 페어링 된 블루투스 장치를 선택하세요!"
                android:textSize="25dp" />

            <Button

                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:background="@color/teal_200"
                android:text="운동 시작하기" />

            <Button
                android:id="@+id/btnStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/teal_200"
                android:textSize="30sp"
                android:backgroundTint="@color/teal_200"
                android:text="운동 마치기 및 저장"
                android:visibility="gone" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textSize="40dp"
                android:id="@+id/ultras"
                android:gravity="center_horizontal"
                android:hint="'운동 시작하기' 버튼을 눌러주세요"/>



            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/timechart"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/avgFchart"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/Areachart"
                android:layout_width="match_parent"
                android:layout_height="250dp" />



            <ListView
                android:id="@+id/listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="received data" />


        </LinearLayout>




    </ScrollView>






</LinearLayout>